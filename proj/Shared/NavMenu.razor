<style>
    /* Custom styling for the navbar */

    /* Navbar customization */
    .navbar {
        background-color: #0066b2; /* Navbar background color */
        width: 100%; /* Make navbar span full width */
        position: relative;
        z-index: 1000;
        margin-top: 0; /* Remove margin at the top */
    }

    .navbar-brand {
        color: white;
        font-family: 'Oswald', sans-serif; /* Change to Oswald font */
        font-size: 24px;
        font-weight: bold;
        text-transform: uppercase;
        transition: transform 0.3s ease; /* Adding a transition effect */
    }

        .navbar-brand:hover {
            transform: scale(1.05); /* Scale effect on hover */
        }

    .nav-link {
        color: white !important;
        transition: color 0.3s ease;
        position: relative;
        padding: 0.5rem 1rem;
    }

        .nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background-color: #ffc107;
            transform: scaleX(0);
            transition: transform 0.3s ease;
            transform-origin: bottom right;
        }

        .nav-link:hover::before {
            transform: scaleX(1);
            transform-origin: bottom left;
        }

    .navbar-nav .nav-item {
        margin-right: 10px;
    }

    .nav-link.active::before {
        transform: scaleX(1);
        transform-origin: bottom left;
    }

    .small-profile-photo {
        width: 140px; /* Reduced profile photo size */
        height: 70px; /* Maintain aspect ratio */
       /*  border-radius: 50%; */ /* Make the profile photo circular */
    }

    .custom-btn {
        color: white; /* Set text color to white */
        background-color: #28a745; /* New background color for the buttons */
        border-color: #28a745; /* Matching border color */
        transition: background-color 0.3s ease, transform 0.3s ease;
        /* Adding transition effects */
        display: flex;
        justify-content: center; /* Align text horizontally to center */
        align-items: center; /* Align text vertically to center */
    }

    .button-text {
        color: white; /* Set text color to white */
    }

    .custom-btn:hover {
        background-color: #218838; /* Darker background color on hover */
        transform: scale(1.05); /* Scale effect on hover */
    }
</style>


