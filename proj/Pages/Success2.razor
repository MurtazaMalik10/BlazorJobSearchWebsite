@page "/success2"
<HeadContent>
    <!-- Importing Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        /* Your existing styles here */

        /* Body styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f8f8;
            color: #333;
        }

        /* Container styles */
        .container {
            margin-top: 20px;
        }

        /* Heading styles */
        h3 {
            font-family: 'Roboto', sans-serif;
            font-weight: 700;
            font-size: 4.8em;
            margin-bottom: 20px;
            color: #333;
        }

        /* Paragraph styles */
        p {
            font-size: 1.1em;
            line-height: 1.6;
            color: #555;
        }

        /* Card overlay */
        .card-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        /* Card title and text styles */
        .card-title,
        .card-text {
            z-index: 2;
        }

        /* Card body styles */
        .card-body {
            position: relative;
            z-index: 2;
        }

        .linkedin-icon {
            color: #0077b5; /* LinkedIn brand color */
            margin-left: 5px; /* Adjust spacing between text and icon */
            transition: color 0.3s ease; /* Smooth transition effect for color change */
        }

            .linkedin-icon:hover {
                color: #0a66c2; /* New color on hover */
                transform: scale(1.1); /* Scale effect on hover */
            }
    </style>
</HeadContent>

<div class="row mt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Success Story</h3>
            <p>
                <strong><i class="fas fa-user"></i> Faheem's Journey to Success</strong><br>
                Read about Faheem's experience finding his dream job through our platform.
