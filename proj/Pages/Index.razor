@page "/"
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager NavigationManager
@using Entities
@using DAL

<HeadContent>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</HeadContent>
<div class="container">
    <!-- Hero Section -->
    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome to Job Portal</h1>
        <p class="lead">Find your dream job with us</p>
        <button class="btn btn-primary btn-lg" @onclick="ViewJobListings">View All Job Listings</button>
    </div>

    <!-- Job Listings Section -->
    @if (latestJobs != null && latestJobs.Any())
    {
        <div id="job-listings" class="mt-5">
            <h2 class="text-center mb-4">Latest Job Listings</h2>
            <div class="row">
                @foreach (var job in latestJobs)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" @onclick="() => ViewJobDetails(job.JobId)">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">Job Title: @job.JobTitle</h5>
                                <p class="card-text flex-grow-1">@job.Description</p>
                                <!-- Other job details -->
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p class="text-center">No jobs found.</p>
    }

    <!-- Footer -->
    <footer class="footer mt-5">
        <div class="container text-center">
            <p>&copy; 2023 Job Portal - All rights reserved</p>
            <p>Designed by Murtaza and Sons</p>
            <p>Email: contact@jobportal.com | Phone: +1234567890</p>
        </div>
    </footer>

</div>

@code {
    List<EntJobs> latestJobs;

    protected override void OnInitialized()
    {
        // Fetch latest jobs for display on the index page
        latestJobs = DALJobs.GetLatestJobsWithThumbnails();
    }

    void ViewJobListings(MouseEventArgs e)
    {
        NavigationManager.NavigateTo("/joblistings");
    }

    void ViewJobDetails(int jobId)
    {
        NavigationManager.NavigateTo($"/viewjob/{jobId}");
    }
}
